@model ListingViewModel
<div class="row">
    <div class="col-md-6 offset-md-3">
        @foreach (Listing l in Model.Listings)
        {
            <div class="bg-light rounded-3 p-5 mt-3">

                <h5>Listed by @l.UserName</h5>

                <h5>Listed on @l.DateCreated.ToLongDateString()</h5>
                <h5>Phone Number: @l.PhoneNumber</h5>
                <h3>Details:</h3>
                <p>@l.Text</p>
                @if (Model.IsLoggedIn && User.Identity.Name == l.UserName)
                {
                    <form method="post" action="/home/Delete">
                        <input type="hidden" value="@l.Id" name="id" />
                        <button class="btn btn-danger">DELETE</button>
                    </form>
                }
            </div>
        }

    </div>
</div>