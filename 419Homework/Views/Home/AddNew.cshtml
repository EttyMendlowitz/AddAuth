@model UserViewModel
<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2>New Ad</h2>
    </div>
</div>

<div class="row">
    <div class="col-md-6 offset-md-3 bg-light rounded-3 p-5">
        <form method="post" action="/home/addnew">
            <div class="row">
                <input type="hidden" class="form-control" name="id" value="@Model.UserId" />

                <div class="col-md-12">
                    <input type="text" placeholder="Phone Number" class="form-control" name="phonenumber" />
                </div>
                <input type="hidden" class="form-control" name="username" value="@Model.UserName" />
            </div>
            <br />
            <textarea name="text" class="form-control" rows="10" placeholder="Description"></textarea>
            <button class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
